{
  "name": "imgninja",
  "version": "1.0.0",
  "description": "Free online image converter with Next.js 15",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "format": "biome format --write .",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "ANALYZE=true npm run build && npx serve out",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer .next/static/chunks/*.js",
    "analyze:deps": "node scripts/analyze-dependencies.js",
    "optimize": "node scripts/optimize-codebase.js",
    "cleanup": "npm run optimize && npm run analyze:deps && npm run lint && npm run format"
  },
  "keywords": [
    "image",
    "converter",
    "webp",
    "avif"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/jszip": "^3.4.0",
    "autoprefixer": "^10.4.21",
    "jszip": "^3.10.1",
    "next": "^16.0.0",
    "next-intl": "^4.4.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.0",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@next/bundle-analyzer": "^16.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "typescript": "^5.9.3"
  }
}
